{% for entity in entities %}
	<div class="comment_header"><b>{{entity.user }}</b> - <i>le {{ entity.createdAt|date("d/m/Y Ã  H:i:s") }}</i></div>
	<div class="comment"><p>{{entity.text|raw }}</p></div>
{% endfor %}

{% if number_pages > 1 %}
	<div id="nav_previous">
	{% if page <= 1 %}
		{{ 'comment.list.PreviousPage'|trans }}
	{% else %}
		<a href="#" alt="previous page" data-followpage="{{ page - 1 }}" class="page_action">{{ 'comment.list.PreviousPage'|trans }}</a>
	{% endif %}
	</div>
	
	<div id="nav_next">
	{% if page >= number_pages %}
		{{ 'comment.list.NextPage'|trans }}
	{% else %}
		<a href="#" alt="next page" data-followpage="{{ page + 1 }}" class="page_action">{{ 'comment.list.NextPage'|trans }}</a>
	{% endif %}
	</div>
	
	<div id="nav_current" class="center">
	<span>{{ page }}</span>
	</div>
{% endif %}